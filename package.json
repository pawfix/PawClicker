{
  "name": "pawclicker",
  "version": "1.0.0",
  "main": "src/main/main.js",
  "author": "Pawfix <MrNieprzytomny@proton.me> (https://github.com/pawfix)",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:zip": "electron-builder --win zip",
    "build:win": "electron-builder --win portable",
    "build:linux": "electron-builder --linux AppImage",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\""
  },
  "build": {
    "appId": "com.clicker.paw",
    "productName": "PawClicker",
    "extraResources": [
      {
        "from": "./src/assets/",
        "to": "extraResources",
        "filter": [
          "stats.json",
          "!build/*",
          "!UI/*",
          "!shop.js",
          "!clicker.js"
        ]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "asar": true,
    "win": {
      "icon": "src/assets/build/icon.ico",
      "target": [
        "zip"
      ]
    },
    "mac": {
      "icon": "src/assets/build/icon.icns"
    },
    "linux": {
      "icon": "src/assets/build/icon.png",
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.0.0",
    "electron-is-dev": "^3.0.1"
  }
}