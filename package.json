{
  "name": "pawclicker",
  "version": "1.0.0",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:zip": "electron-builder --win zip",
    "build:win": "electron-builder --win portable",
    "build:linux": "electron-builder --linux AppImage",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\""
  },
  "build": {
    "appId": "com.clicker.paw",
    "productName": "PawClicker",
    "extraResources": [
      {
        "from": "./src/assets/",
        "to": "extraResources",
        "filter": [
          "**/*",
          "!clicker.js"
        ]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": [
        "portable",
        "zip"
      ]
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0"
  }
}